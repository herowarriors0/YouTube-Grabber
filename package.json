{
  "name": "youtube-grabber",
  "version": "1.0.0",
  "description": "Standalone YouTube video downloader",
  "main": "src/main.js",
  "homepage": "./",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.youtubegrabber.app",
    "productName": "YouTube Grabber",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/yt-dlp.exe",
        "to": "yt-dlp.exe"
      },
      {
        "from": "assets/ffmpeg.exe",
        "to": "ffmpeg.exe"
      },
      {
        "from": "assets/ffprobe.exe",
        "to": "ffprobe.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "ffmpeg-static": "^5.1.0",
    "ffprobe-static": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0"
  }
}
